{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6",
      "DOM"
    ],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "declaration": false,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ]
}