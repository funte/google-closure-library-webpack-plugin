{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "allowJs": true,
    "declaration": true,
    "checkJs": true,
    "noEmit": false,
    "strict": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "include": [
    "declarations.d.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}