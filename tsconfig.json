{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6"
    ],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false, // Many errors in Webpack, disable this flag.
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ]
}